@model Parking_Reservation_V0._1.Models.RegisterModel
@{
    ViewData["Title"] = "회원가입";
}

<div class="container">
    <div class="row">
        <div class="col-4 m-auto">
            <main class="form-signin w-100">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h1 class="h3 mb-3 fw-normal" style="color: white;">회원가입</h1>
                    
                    <div class="form-floating">
                        <input asp-for="UserId" type="text" class="form-control" placeholder="UserId" />
                        <label asp-for="UserId" ></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="CarId" type="text" class="form-control" placeholder="CarId" />
                        <label asp-for="CarId"></label>
                    </div>

                    <button class="w-100 btn btn-lg btn-light" type="submit">회원가입</button>

                </form>
            </main>
        </div>
    </div>
</div>